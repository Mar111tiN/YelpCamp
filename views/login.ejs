<% include ./partials/header%>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Log In</h1>
        </div>
        <div class="col-md-4 col-xs-12" style="margin-top: 40px">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="name" class="sr-only">Name</label>
                    <input class="form-control" type="text" id="name" name="username" placeholder="Martin Szyszysszya">
                </div>
                <div class="form-group">
                    <label for="password" class="sr-only">Image</label>
                    <input class="form-control" type="password" id="password" name="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Log In</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>



