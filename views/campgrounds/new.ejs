<% include ../partials/header%>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Campground</h1>
        </div>
        <div class="col-md-4 col-xs-12" style="margin-top: 40px">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="campground[name]" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" placeholder="https://images.unsplash.com/..">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" id="description" name="campground[description]" placeholder="Some information about the site">
                </div>
                <div class="form-group">
                    <label for="price">Price ($/ Night)</label>
                    <input class="form-control" type="number" id="price" name="campground[price]" placeholder="Price" min="0.1" max="250" step='0.1'>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit campground!</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>

<% include ../partials/footer%>