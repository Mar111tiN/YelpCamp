<% include ../partials/header%>


    <div class="row justify-content-center">


        <div class="col-md-4 col-xs-12" style="margin-top: 40px">
            <h4>Edit Comment to <%= campground.name %></h4>
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comment" class="sr-only">New Comment</label>
                    <input class="form-control" type="text" id="comment" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-block">Edit</button>
                </div>
                
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>

    </div>


<% include ../partials/footer%>